# Notion API Integration Token
# Get from: https://www.notion.so/my-integrations
# After creating an integration, copy the "Internal Integration Token"
NOTION_API_TOKEN=

# MCP API Key for ChatGPT authentication (legacy - not needed with OAuth)
# Generate using: python -c "import secrets; print(secrets.token_urlsafe(32))"
# This is a secret key you create yourself to protect your MCP server
MCP_API_KEY=

# OAuth Configuration for ChatGPT MCP Connector
# Base URL of your MCP server (used in OAuth redirects)
BASE_URL=https://notionmcp.nowhere-else.co.uk

# OAuth Client Secret (shared secret with ChatGPT)
# Generate using: python -c "import secrets; print(secrets.token_urlsafe(32))"
OAUTH_CLIENT_SECRET=

# Token Encryption Key (for storing OAuth tokens securely)
# Generate using: python -c "import secrets; print(secrets.token_urlsafe(32))"
TOKEN_ENCRYPTION_KEY=
